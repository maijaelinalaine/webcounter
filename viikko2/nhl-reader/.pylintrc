[MASTER]

ignore-paths=src/tests
ignore=single_file_to_ignore.py

[MESSAGE CONTROL]

disable=too-few-public-methods,
        raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring

[BASIC]
class-attribute-naming-style=snake_case

[FORMAT]
max-line-length=100
indent-after-paren=4

[REFACTORING]
max-nested-blocks=6
max-module-lines=300

[DESIGN]